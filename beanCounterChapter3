function countBs(string) {
  var counter = 0;
  for (var p = 0; p < string.length; p++)
    if (string.charAt(p) == "B")
      counter += 1;
 
return counter;
	
}

console.log(countBs("BBC"));


function countChar(string, c) {
  var counter = 0;
  for (var p = 0; p < string.length; p++)
    if (string.charAt(p) == c)
      counter += 1; 
return counter;
	
}

console.log(countChar("kakkerlak", "k"));
